<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
      　<div id = "star-rate-<%= comment.id %>"></div>
　　　　   <script>
            $('#star-rate-<%= comment.id %>').raty({
            size: 36,
            starOff:  '<%= asset_path('star-off.png') %>',
            starOn : '<%= asset_path('star-on.png') %>',
            starHalf: '<%= asset_path('star-half.png') %>',
            half: true,
            readOnly: true,
            score: <%= comment.rate %>
          })
          </script>
        <div class="comment-review" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.review %></p>
        <% if current_user.present? %>
        <p><%= link_to "コメント編集", edit_user_comment_path(user, comment), remote: true %></p>
        <p><%= link_to "コメント削除", user_comment_path(comment.user_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
        <% end %>
      </li>
    <% end %>
  <% end %>
</ul>
