<%= link_to 'マイページ編集', edit_user_path(current_user.id) %>
<%= link_to "マイページ", user_path(current_user.id) %>

<h1>スタイリスト一覧</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :content, "検索" %>
  <%= f.search_field :content_cont %>

  <%= f.label :年齢 %>
  <%= f.select :age_eq, options_for_select([['指定なし', ''], ['20代','20代'], ['30代','30代'], ['40代','40代'], ['50代以上','50代以上']], :selected => :age) %>
  
  <%= f.label :性別 %>
　<%= f.radio_button :gender_eq, '', {:checked => true} %>指定なし
  <%= f.radio_button :gender_eq, 0 %>男性
  <%= f.radio_button :gender_eq, 1 %>女性
  <!--ここまで追加-->

  <%= f.submit "検索" %>
<% end %>

<table>
<tr>
  <th>プロフィール写真<th>
  <th>ニックネーム<th>
  <th>年齢<th>
  <th>性別<th>
  <th>自己紹介<th>
</tr>

<% @users.each do |user| %>
  <% if user.adviser? %>
  <tr>
    <td><%= image_tag user.image.url %></td>
    <td><%= user.nickname %></td>
    <td><%= user.age %></td>
    <% unless user.hide_gender? %>
    <td><%= user.gender %></td>
    <% end %>
    <td><%= user.content %></td>
    <td><%= link_to 'メッセージ', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post %></td>
    <td><%= render 'follow_form', user: user %></td>
    <td><%= link_to '詳細を見る', user_path(user.id) %>
  </tr>
  <% end %>
<% end %>

</table>
      