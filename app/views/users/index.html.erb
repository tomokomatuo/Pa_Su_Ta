<h1 class="heading02">スタイリスト一覧</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :content, I18n.t('activerecord.views.search') %>
  <%= f.search_field :content_cont %>

  <%= f.label I18n.t('activerecord.attributes.user.age') %>
  <%= f.select :age_eq, options_for_select([['指定なし', ''], ['20代','20代'], ['30代','30代'], ['40代','40代'], ['50代以上','50代以上']], :selected => :age) %>
  
  <%= f.label I18n.t('activerecord.attributes.user.gender') %>
　<%= f.radio_button :gender_eq, '', {:checked => true} %>指定なし
  <%= f.radio_button :gender_eq, 0 %>男性
  <%= f.radio_button :gender_eq, 1 %>女性
  
  <%= f.submit I18n.t('activerecord.views.search') %>
<% end %>


<table>
<% @users.each do |user| %>
  <% if user.adviser? %>
  <tr>
  　<% if user.image? %>
    <td><%= image_tag user.image.url %></td>
    <% else %>
    　<td><%= image_tag "/assets/default.png", :size => '200x130' %></td>
　　<% end %>
    <td><%= user.nickname %></td>
    <td><%= user.age %></td>
    <% unless user.hide_gender? %>
    <td><%= user.gender %></td>
    <% end %>
    <td><%= user.content %></td>
    <td><%= link_to I18n.t('activerecord.views.message'), conversations_path(sender_id: current_user.id, recipient_id: user.id), method: :post, id: "send_message" %></td>
    <td><%= render 'follow_form', user: user %></td>
    <td><%= link_to I18n.t('activerecord.views.detail'), user_path(user.id) %>
  </tr>
  <% end %>
 
<% end %>



      