<section class="wrapper">
  <div class="box1 box_line">
<h2>フォロー中の人一覧</h2>
<hr>
<table>
<% @user.following.each do |user| %>
  
  
  <tr>
    <td><%= user.nickname %></td>
    <td><%= render 'follow_form', user: user %></td>
    <td><%= link_to I18n.t('activerecord.views.detail'), user_path(user) %></td>
  </tr>
  
 
<% end %>
</table>
</div>
</section>