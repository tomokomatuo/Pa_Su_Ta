<h1>スタイリストを探しているユーザー一覧</h1>
<%= search_form_for @q do |f| %>
  <%= f.label :content, "Keyword" %>
  <%= f.search_field :content_cont %>

  <%#= f.label :age %>
  <%#= f.number_field :age_gteq %>以上〜
  <%#= f.number_field :age_lt %>未満

  <!--ここから追加-->
  <%= f.label :gender %>
　<%= f.radio_button :gender_eq, '', {:checked => true} %>指定なし
  <%= f.radio_button :gender_eq, 1 %>男性
  <%= f.radio_button :gender_eq, 2 %>女性
  <!--ここまで追加-->

  <%= f.submit "検索" %>
<% end %>

<table>
<tr>
  <th>プロフィール写真<th>
  <th>ニックネーム<th>
  <th>年齢<th>
  <th>性別<th>
  <th>服に関するお悩み<th>
</tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.nickname %></td>
    <td><%= user.age %></td>
    <% unless @user.hide_gender? %>
    <td><%= user.gender %></td>
    <% end %>
    <td><%= user.content %></td>
    <td><%= link_to '詳細を見る', user_path(user.id) %>
  </tr>
<% end %>

</table>